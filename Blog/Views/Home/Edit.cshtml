@model Blog.Models.User
@{
    ViewBag.Tittle = "Изменить пользователя";
}
<form asp-action="edit" asp-controller="home">

    <div class="form-group">
        <a>Фамилия:</a>
        <input type="text" asp-for="Surname" placeholder="Иванов" class="form-control" />
    </div>

    <div class="form-group">
        <a>Имя:</a>
        <input type="text" asp-for="Name" placeholder="Иван" class="form-control" />
    </div>

    <div class="form-group">
        <a>Дата рождения:</a>
        <input type="date" asp-for="BirthDate" class="form-control" />
    </div>

    <div class="form-group">
        <a>Email:</a>
        <input type="email" asp-for="Email" placeholder="example@mail.ru" class="form-control" />
    </div>

    <div class="form-group">
        <a>Логин:</a>
        <input type="text" asp-for="Login" placeholder="Логин" class="form-control" />
    </div>

    <div class="form-group">
        <a>Пароль:</a>
        <input type="password" asp-for="Password" placeholder="Пароль" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить изменения" class="btn btn-outline-success" id="liveToastBtn" />
    </div>

</form>