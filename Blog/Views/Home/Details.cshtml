@model Blog.Models.User

@{
    ViewData["Title"] = "Подробнаяя информация";
}

<h1>Информация о пользователе
    "@Html.DisplayFor(model => model.Login)"</h1>

<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
            @*@Html.DisplayNameFor(model => model.ID)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt class="col-sm-2">
            Фамилия
            @*@Html.DisplayNameFor(model => model.ID)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt class="col-sm-2">
            Имя
            @*@Html.DisplayNameFor(model => model.ID)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Дата рождения
            @*@Html.DisplayNameFor(model => model.ID)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt class="col-sm-2">
            Эл. почта
            @*@Html.DisplayNameFor(model => model.Email)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Логин
            @*@Html.DisplayNameFor(model => model.Login)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Login)
        </dd>
        <dt class="col-sm-2">
            Пароль
            @*@Html.DisplayNameFor(model => model.Password)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            Роль
        </dt>
        <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Role.Role_Name)
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit">Edit | </a>*@
    @Html.ActionLink("Изменить", "Edit", new {  id = Model.ID  }) |
    <a asp-action="Index">Назад к списку</a>
</div>
